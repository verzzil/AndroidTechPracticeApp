<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_message_my_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/my_msg_bg"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_message_friend_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/item_message_my_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfqwerqwer"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_message_friend_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_msg_bg"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/item_message_my_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_message_friend_msg_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Albert Khannanov"
            android:textColor="#259CD8"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_message_friend_msg_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="asdfqwerqwer"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/item_message_friend_msg_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>